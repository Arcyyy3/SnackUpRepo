<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SnackUpClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SnackUpClient"
    Title="SnackUpClient"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled"
    
       
       TitleColor="#FF7B21"
       WidthRequest="100"
       UnselectedColor="#171717"
   >
    <!-- Pagina Home -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />
    <!-- Pagina Iniziale -->
    <ShellContent
    Title="StartPage"
    ContentTemplate="{DataTemplate local:PaginaIniziale}"
    Route="StartPage" />
    <!-- Pagina Login -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:PaginaLogin}"
        Route="LoginPage" />

    <!-- Pagina Tutorial -->
    <ShellContent
        Title="Tutorial"
        ContentTemplate="{DataTemplate local:TutorialIniziale}"
        Route="TutorialPage" />

</Shell>
