<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SnackUpClient.ProductPage"
             Title="Product Page"
             >

    <Grid RowDefinitions="*,Auto">



        <ScrollView Grid.Row="0" Background="Transparent" x:Name="MainScrollView" HorizontalScrollBarVisibility="Never" 
        VerticalScrollBarVisibility="Never">

            <StackLayout Margin="0,-251,0,0">

                <!-- Section for images only -->
                <StackLayout>
                    <!-- Store image -->
                    <StackLayout x:Name="BlackOverlay" TranslationY="250" Background="Black">
                        <Image x:Name="StoreImage" HeightRequest="220" Aspect="AspectFill" TranslationY="0" Opacity="0.5"/>
                    </StackLayout>

                    <!-- Circular product image -->
                    <Border Background="Transparent"
                    Stroke="Transparent"
                    
                    StrokeShape="RoundRectangle 150"
                    HeightRequest="230"
                    WidthRequest="230"
                    VerticalOptions="Start"
                    TranslationY="0"
                    Margin="0,105,0,0">
                        <Border.Shadow>
                            <Shadow Brush="Black" 
                            Opacity="0.3" 
                            Radius="30" 
                            Offset="5,5" />
                        </Border.Shadow>
                        <Image x:Name="ProductImage" 
                       Aspect="AspectFill" 
                       WidthRequest="230" 
                       HeightRequest="230" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
                    </Border>

                </StackLayout>

                <StackLayout Padding="20,10,20,10" Background="Transparent">
                    <!-- Store title -->
                    <Label x:Name="StoreTitleLabel"
           Text="Forno Brisa"
           TextColor="#171717"
           FontSize="18"
           FontFamily="Roboto-Bold"
           HorizontalOptions="Start" />

                    <!-- Product title -->
                    <Label x:Name="ProductTitleLabel"
           Text="Panino Prosciutto Cotto"
           FontSize="25"
           TextColor="#171717"
           FontFamily="Roboto-Bold"
           HorizontalOptions="Start" />

                    <!-- Row with remaining items and price -->
                    <Grid ColumnDefinitions="*,Auto" Margin="0,10">
                        <!-- Frame per i pezzi rimanenti (sinistra) -->
                        <Frame CornerRadius="20"
                    BackgroundColor="#FF7B21"
                    Padding="10,2,10,2"
                    BorderColor="#FF7B21"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Grid.Column="0">
                            <Label x:Name="RemainingItemsLabel"
               TextColor="White"
               FontSize="14"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center" />
                        </Frame>

                        <!-- Prezzi (destra) -->
                        <StackLayout Orientation="Horizontal"
                 HorizontalOptions="End"
                 VerticalOptions="Center"
                 Spacing="10"
                 Grid.Column="1">
                            <!-- Prezzo originale -->
                            <Label x:Name="OriginalPriceLabel"
               FontSize="14"
               TextColor="#171717"
               FontFamily="Roboto-Bold"
               TextDecorations="Strikethrough"
               VerticalOptions="End" />

                            <!-- Prezzo scontato -->
                            <Label x:Name="DiscountedPriceLabel"
               FontSize="20"
               FontFamily="Roboto-Black"
               TextColor="#FF7B21"
               VerticalOptions="End" />
                        </StackLayout>
                    </Grid>
                </StackLayout>

                <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooo SEPARAZIONE oooooooooooooooooooooooooooooooooooooooooooooooooooo-->
                <BoxView HeightRequest="1" BackgroundColor="LightGray" />

                <!-- Section for product description -->
                <StackLayout Padding="20,10,20,5" Spacing="10">
                    <StackLayout>
                        <Grid Padding="0,5,0,5" ColumnDefinitions="1*,1*" RowSpacing="10">
                            <!-- oooooooooooooooooooooooooooooooooooo CATEGORIA oooooooooooooooooooooooooooooooooooo -->
                            <StackLayout Grid.Column="0" Spacing="10">
                                <Label 
                        Text="Categoria"
                        FontSize="16"
                        FontFamily="Roboto-Bold"
                        HorizontalOptions="Start" />

                                <!-- Category frames -->
                                <FlexLayout x:Name="CategoryFlexLayout"
                        Wrap="Wrap"
                        AlignItems="Start"
                        JustifyContent="Start"
                        Direction="Row"
                        >
                                    <Frame x:Name="CategoryFrameTemplate"
                       IsVisible="False"
                       CornerRadius="50"
                       BackgroundColor="LightGray"
                       BorderColor="Transparent"
                       Padding="10,2,10,2"
                       Margin="1"
                       HorizontalOptions="Start">
                                        <Label x:Name="CategoryLabelTemplate"
                           Text=""
                           TextColor="White"
                           FontSize="14"
                           HorizontalTextAlignment="Center" />
                                    </Frame>
                                </FlexLayout>
                            </StackLayout>

                            <!-- oooooooooooooooooooooooooooooooooooo ALLERGENI oooooooooooooooooooooooooooooooooooo -->
                            <StackLayout Grid.Column="1" Spacing="10" Background="Transparent">
                                <Label 
                Text="Allergeni"
                FontSize="16"
                FontFamily="Roboto-Bold"
                HorizontalOptions="End" />

                                <!-- Allergens frames -->
                                <FlexLayout x:Name="AllergensFlexLayout"
                        Wrap="Wrap"
                        AlignItems="Start"
                        JustifyContent="End"
                        Direction="Row"
                        >
                                    <Frame x:Name="AllergenFrameTemplate"
                       IsVisible="False"
                       CornerRadius="50"
                       BackgroundColor="LightGray"
                       BorderColor="Transparent"
                       Padding="10,2,10,2"
                       Margin="1"
                       HorizontalOptions="Start">
                                        <Label x:Name="AllergenLabelTemplate"
                           Text=""
                           TextColor="White"
                           FontSize="14"
                           
                           HorizontalTextAlignment="Center" />
                                    </Frame>
                                </FlexLayout>
                            </StackLayout>
                        </Grid>
                    </StackLayout>

                    <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooo SEPARAZIONE oooooooooooooooooooooooooooooooooooooooooooooooooooo-->
                    <BoxView HeightRequest="1" BackgroundColor="LightGray" />


                    <!-- ooooooooooooooooooooooooooooooooooo SEZIONE DESCRIZIONE, SPECIFICHE E COSE DA SAPERE ooooooooooooooooooooooooooooooooooooo -->
                    <Label
                   Margin="0,5,0,0"
                   Text="Descrizione Prodotto"
                   FontSize="16"
                   FontFamily="Roboto-Bold"
                   HorizontalOptions="Start" />

                    <!-- Product description text -->
                    <Label x:Name="ProductDescriptionTextLabel"

                   FontSize="14"
                   TextColor="#171717"
                   FontFamily="Roboto"
                   LineHeight="1.5"
                   HorizontalOptions="Start" />


                    <BoxView HeightRequest="1" BackgroundColor="LightGray" />

                    <!-- Specifications title -->
                    <Label
                   Margin="0,5,0,0"
                   Text="Specifiche Prodotto"
                   FontSize="16"
                   FontFamily="Roboto-Bold"
                   HorizontalOptions="Start" />
                    <Label 
                   Text="Ingredienti:"
                   FontSize="14"
                    FontFamily="Roboto"
                   HorizontalOptions="Start" />

                    <!-- Specifications text -->
                    <Label x:Name="SpecificationsTextLabel"

                   FontSize="14"
                    TextColor="#171717"
                    FontFamily="Roboto"
                    LineHeight="1.5"
                   HorizontalOptions="Start" />

                    <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooo SEPARAZIONE oooooooooooooooooooooooooooooooooooooooooooooooooooo-->
                    <BoxView HeightRequest="1" BackgroundColor="LightGray" />

                    <Grid Padding="0,-1,0,5" ColumnDefinitions="*,Auto">
                        <!-- Titolo Raccomandazioni -->
                        <Label
                        Margin="0,5,0,0"
                        Text="Cosa devi sapere"
                        FontSize="16"
                        FontFamily="Roboto-Bold"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        Grid.Column="0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnToggleRecommendationsClicked" />
                            </Label.GestureRecognizers>
                        </Label>

                        <!-- Pulsante -->
                        <ImageButton Source="arrow_down.png" HorizontalOptions="End" 
                         WidthRequest="30"
                         HeightRequest="30"
                         Padding="6"
                         Clicked="OnToggleRecommendationsClicked"/>
                    </Grid>

                    <!-- Sezione Raccomandazioni -->
                    <StackLayout x:Name="RecommendationsSection" IsVisible="False">
                        <Label 
                         x:Name="RecommendationsTextLabel"
                        Text="• I prodotti ordinati verranno confezionati in una busta per classe 
                            e ritirati dall'incaricato poco prima della ricreazione."
                        FontSize="14"
                        LineHeight="1.5"
                        FontFamily="Roboto"
                        HorizontalOptions="Start" />
                        <Image Source="consegna_mano.svg" Margin="0,10,0,10"/>
                        <BoxView HeightRequest="1" BackgroundColor="LightGray" />
                        <Label 
                        Text="• In caso di errori rivolgiti al fornitore durante l'orario della tua pausa"
                        FontSize="14"
                            Margin="0,10,0,10"
                        LineHeight="1.5"
                        FontFamily="Roboto"
                        HorizontalOptions="Start" />
                        <Image Source="errore_consegna.svg" />
                    </StackLayout>



                </StackLayout>
            </StackLayout>
        </ScrollView>
        <!-- Contenitore Fisso per il Bottoneeeeeeeeeeeeeeeeeeeeeeee -->
        <Border Grid.Row="1"
        BackgroundColor="White"
        Stroke="White"
        StrokeShape="RoundRectangle 0"
        ZIndex="10"
        Padding="0">
            <Border.Shadow>
                <Shadow Brush="Black" 
                Opacity="0.2" 
                Radius="30" 
                Offset="0,5" />
            </Border.Shadow>
            <StackLayout>
                <Frame x:Name="FrameScadenza" HeightRequest="32" BorderColor="#40FF0000" BackgroundColor="#90FF0000" Padding="0" VerticalOptions="Center">
                    <Label x:Name="TimerLabel" 
           Text="Affrettati! Hai solo 30:00 minuti per ordinare oggi!" 
           HorizontalOptions="Center" 
           Margin="0,0,0,0" 
           VerticalOptions="Center" 
           TextColor="White" 
           FontFamily="Roboto" 
           FontSize="14" />
                </Frame>
                <Grid Padding="20" ColumnDefinitions="*,Auto" >
                    <!-- Bottone principale -->
                    <Button x:Name="AddToCartButton"
                Text="Aggiungi al Carrello"
                BorderColor="#FF7B21"
                BackgroundColor="#FF7B21"
                TextColor="White"
                BorderWidth="1.5"
                FontFamily="Roboto-Medium"
                FontSize="15"
                CornerRadius="35"
                HeightRequest="50"
                Clicked="OnAddToCartClicked" />

                    <!-- Bottone "Vai al carrello", inizialmente nascosto -->
                    <Button x:Name="GoToCartButton"
                Text="Vai al Carrello"
                Clicked="OnNavigateToCartPage"
                BorderColor="#FF7B21"
                BackgroundColor="#FF7B21"
                TextColor="White"
                FontFamily="Roboto-Medium"
                FontSize="15"
                BorderWidth="1.5"
                WidthRequest="160"
                CornerRadius="35"
                HeightRequest="50"
                IsVisible="False"
                Grid.Column="1"
                Margin="15,0,0,0" />

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Grid.Column="0" 
                                 VerticalOptions="Center" IsVisible="False" x:Name="QuantitySelector">
                        <!-- Bottone "-" -->
                        <Button x:Name="DecreaseQuantityButton"
                    Text="-"
                    BackgroundColor="#E6E6E6"
                    BorderColor="Transparent"
                    
                    TextColor="White"
                    FontFamily="Roboto-Bold"
                    FontSize="20"
                    Padding="0"
                    Margin="0,0,22,0"
                    CornerRadius="50"
                    WidthRequest="38"
                    HeightRequest="38"
                    Clicked="OnDecreaseQuantityClicked" />

                        <!-- Quantità -->
                        <Label x:Name="QuantityLabel"
                   Text="1"
                   TextColor="#171717"
                   FontSize="18"
                   FontFamily="Roboto-Medium"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

                        <!-- Bottone "+" -->
                        <Button x:Name="IncreaseQuantityButton"
                    Text="+"
                    BackgroundColor="#FF7B21"
                    BorderColor="Transparent"
                    TextColor="White"
                    FontFamily="Roboto-Medium"
                    FontSize="20"
                    Padding="0"
                    Margin="22,0,0,0"
                    CornerRadius="50"
                    WidthRequest="38"
                    HeightRequest="38"
                    Clicked="OnIncreaseQuantityClicked" />
                    </StackLayout>

                </Grid>
            </StackLayout>
        </Border>
        <!--ooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo Bottom Sheet DOVRAI COLLEGARE AL CARELLO QUESTO MI RACCOMANDO ooooooooooooooooo-->
        <Frame x:Name="BottomSheet"
       BackgroundColor="White"
       BorderColor="LightGray"
       Margin="-1,0,-1,-2"
       CornerRadius="0"
       HeightRequest="222"
       TranslationY="300"
       IsVisible="False"
       VerticalOptions="End">
            <Grid>
                <!-- Barra di chiusura in alto -->
                <Grid RowDefinitions="Auto,*" >
                    <!-- ImageButton per chiudere il Bottom Sheet -->
                    <ImageButton Source="close_icon.png"
                         HeightRequest="14"
                         WidthRequest="14"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         Grid.Row="0"
                         Margin="10"
                         Clicked="OnCloseButtonClicked" />

                    <Label
                        Text="Dettagli del Carrello"
                        FontSize="18"
                        Margin="10"
                        FontFamily="Roboto-Bold"
                        HorizontalOptions="Start" />

                    <!-- Contenuto Scrollabile -->
                    <ScrollView Grid.Row="1" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never" Background="Transparent">

                        <StackLayout Spacing="10" Padding="10,0,10,10">
                            <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooo SEPARAZIONE oooooooooooooooooooooooooooooooooooooooooooooooooooo-->
                            <BoxView HeightRequest="1" BackgroundColor="LightGray" />
                            <!-- Product title -->
                            <Label x:Name="BottomSheetProductTitleLabel"
                                Text="Panino Prosciutto Cotto"
                                FontSize="20"
                                TextColor="#171717"
                                FontFamily="Roboto-Bold"
                                HorizontalOptions="Start" />
                            <!-- Contenuto Scrollabile -->
                            <Grid ColumnDefinitions="*,Auto" Margin="0,0">

                                <!-- Frame per i pezzi rimanenti (sinistra) -->
                                <Frame CornerRadius="20"
                               BackgroundColor="#FF7B21"
                               BorderColor="Transparent"
                               Padding="10,2,10,2"
                               HasShadow="False"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               Grid.Column="0">

                                    <Label x:Name="BottomSheetRemainingItemsLabel"
                                   Text="10 rimanenti"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center" />
                                </Frame>

                                <!-- Prezzi (destra) -->
                                <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Spacing="10"
                                     Grid.Column="1">
                                    <!-- Prezzo scontato -->
                                    <Label x:Name="BottomSheetDiscountedPriceLabel"
                                   Text="1,49 €"
                                   FontSize="20"
                                   FontFamily="Roboto-Black"
                                   TextColor="#FF7B21"
                                   VerticalOptions="End" />
                                </StackLayout>
                            </Grid>
                            <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooo SEPARAZIONE oooooooooooooooooooooooooooooooooooooooooooooooooooo-->
                            <BoxView HeightRequest="1" BackgroundColor="LightGray" />
                            <!-- Product title -->
                            <Label 
                            Text="Aggiungi altro"
                            FontSize="16"
                            TextColor="#FF7B21"
                            FontFamily="Roboto-Bold"
                            HorizontalOptions="Start"
                            TextDecorations="Underline">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnNavigateToHomePage" />
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                    </ScrollView>
                </Grid>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
